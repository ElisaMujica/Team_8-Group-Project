create view CSTGardenView 
as select c.cropName, b.bedNo, g.gardenLocation AS gardenName, c.semesterPlanted, c.yearPlanted
from current_Crops c
join Bed b ON c.bedNo = b.bedNo
join Garden g ON b.gardenID = g.gardenID
where g.gardenID = 1
order by b.bedNo;

create view SUSGardenView 
as select c.cropName, b.bedNo, g.gardenLocation AS gardenName, c.semesterPlanted, c.yearPlanted
from current_Crops c
join Bed b ON c.bedNo = b.bedNo
join Garden g ON b.gardenID = g.gardenID
where g.gardenID = 2
order by b.bedNo;

create view CurrentCropView
as select c.cropName, b.bedNo, g.gardenLocation AS gardenName, c.semesterPlanted, c.yearPlanted
from Current_Crops c
join Bed b ON c.bedNo = b.bedNo
join Garden g ON b.gardenID = g.gardenID
order by b.bedNo;

create view OfficerViewInventory
as select i.itemName, iv.quantity, g.gardenLocation AS gardenName
from inventory iv
join item i ON iv.inventoryID = iv.inventoryID 
join Garden g ON iv.gardenID = g.gardenID
order by g.gardenLocation;

create view AdvisorInventoryTransView
as select i.itemName, iv.quantity, g.gardenLocation AS gardenName, ivt.datePurchased, ivt.price
from inventoryTrans ivt
join item i ON ivt.itemID = i.itemID
join inventory iv ON ivt.inventoryID = iv.inventoryID
join Garden g ON iv.gardenID = g.gardenID
order by ivt.datePurchased DESC, i.itemName;
